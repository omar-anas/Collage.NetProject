@model IEnumerable<imdb.Models.actor>

@{
                /**/

                ViewBag.Title = "Add New Actor";
                Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}
<div>
    <h1 class="text-center pt-4" style="color: #ffc107">Actors</h1>
    <div class="container">
        <p>



            <h3> <a class="text-decor" href="/admin/addact" style="color: black">Add New Actor</a> </h3>

        </p>

        <table class="table table-dark">
            <tr>
                <th>
                    Actor name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.photo)
                </th>
                <th>
                    Age
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.photo)" height="150px" />

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.age)
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Edit", "Edit", new { id = item.id }, new { style = "text-decoration:none; color: white;" })</button> |

                        <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Delete", "Delete", new { id = item.id }, new { style = "text-decoration:none; color: white;" })</button>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
