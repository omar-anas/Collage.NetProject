@model IEnumerable<imdb.Models.fav_mov>
@{
    ViewBag.Title = "Favourite Actors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row mt-5 text-center">
        @{ foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <a href="/home/movieUser/@item.Movie.id" class="text-decor">
                        <div class="card border-warning shadow  mb-5 bg-white ">
                            <div class="card-body ">
                                <img src="@item.Movie.photo" alt="" class="img-fluid  w-100 mb-3">
                                <h3>@item.Movie.name</h3>

                                <p class="parag-movie">
                                    @item.Movie.description
                                </p>
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>

