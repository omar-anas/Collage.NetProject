@model imdb.Models.User
@using imdb.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    body {
        background-color: antiquewhite;
    }

    h2 {
        font: bolder;
        margin: 20px;
    }

    image {
        margin-top: 60px;
    }

    img {
        margin-left: 30px;
    }

    form {
        margin: 30px;
        padding: 20px;
    }

    a {
        padding: 20px;
        margin: 30px;
    }
</style>
<h2>@Model.FristName @Model.lastName</h2>
<img .class="image" src="@Model.Photo" height="150px" />
<br />
<br />
