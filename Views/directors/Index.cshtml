@model IEnumerable<imdb.Models.director>

@{
    ViewBag.Title = "Directors";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<body>
    <div>
        <h1 class="text-center pt-4" style="color: #ffc107">Dirctors</h1>
        <div class="container">

            <p>

                <h3> <a class="text-decor" href="/Admin/Add_Dir" style="color: black">Add New Director</a></h3>
            </p>
            <table class="table table-dark">
                <tr>
                    <th>
                        Director name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.photo)
                    </th>
                    <th>
                        Age
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>

                            <img src="@Html.DisplayFor(modelItem => item.photo)" height="150px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.age)
                        </td>
                        <td>
                            <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Edit", "Edit", new { id = item.id }, new { style = "text-decoration:none; color: white;" })</button> |

                            <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Delete", "Delete", new { id = item.id }, new { style = "text-decoration:none; color: white;" })</button>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</body>