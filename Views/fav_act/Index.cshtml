@model IEnumerable<imdb.Models.fav_act>
@{
    ViewBag.Title = "Favourite Actors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-5 text-center">
        @{ foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <a href="/actors/details/@item.Actor.id" class="text-decor">
                        <div class="card border-warning shadow  mb-5 bg-white ">
                            <div class="card-body ">
                                <img src="@item.Actor.photo" alt="" class="img-fluid  w-100 mb-3">
                                <h3>@item.Actor.FirstName @item.Actor.LastName</h3>
                                <p class="parag-movie">
                                    @item.Actor.FirstName @item.Actor.LastName is an American film Actor, producer,
                                    and screenwriter. He began his career in the New Hollywood era and
                                    is currently the most commercially successful director of all time.
                                </p>

                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>
 
